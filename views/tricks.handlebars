<h1>tricks:</h1>
<div class="flex flex-wrap justify-center">
  {{#each tricks}}
    <a href="/trick/{{id}}" class="min-w-0 w-full sm:w-1/2 md:w-1/3 lg:w-1/4 p-2">
        <div class="bg-white p-4 rounded-lg shadow-md">
          <img class="w-full h-48 object-cover rounded-t-lg" src="/uploadedImages/{{images.[0]}}" alt="">
          <h1 class="text-xl font-semibold mt-2">{{name}}</h1>
          <p class="text-gray-600">{{tags}}</p>
        </div>
    </a>
  {{/each}}
</div>